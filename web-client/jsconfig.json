{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,

  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
